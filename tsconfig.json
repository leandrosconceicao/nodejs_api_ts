{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./build",
        "lib": [
          "ES2021.String"
        ],
        "baseUrl": "./",
        "typeRoots" : [
            "@types",
            "./node_modules/@types", 
        ],
        "paths": {
            "@/*": ["./src/*"],
            "*": [
                "node_modules/*",
            ]
        }
    },
    "include": [
        "src",
        "./server.ts",  
    ]
}